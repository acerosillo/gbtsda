---
import type { Product } from "../data";
import { Image } from 'astro:assets';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const transitionName = product.slug;
---

<a href={`/product/${product.slug}`} class="block">
  <article
    class="transition-all"
  >
    <div class="sm:w-64 w-1/4 overflow-hidden">

        <Image 
        src={product.cover}
        alt={product.name}
        class="w-full h-full object-cover rounded-xl shadow-2xl shadow-gray-200 border-b"
        transition:name={`${transitionName} image`}
        width="350" height="350"/>
        
    </div>
    <div class="p-6">
      <h3
        class="font-semibold truncate"
        transition:name={`${transitionName} title`}
      >
        {product.name}
      </h3>
      <p
        class="text-gray-600 text-sm truncate"
        transition:name={`${transitionName} description`}
      >
        {product.description}
      </p>
      <div class="text-right mt-4" transition:name={`${transitionName} price`}>
        <span class="font-semibold">${product.price}</span>
      </div>
    </div>
  </article>
</a>