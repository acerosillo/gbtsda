---
import Layout from "../layouts/Layout.astro";
import { assinstructors } from "../data/AssInstructors";
---
<Layout title="Club Instructors">
    <section class="inner-page team">
        <div class="container">
            <br /><br /><br /><br />
            <h1>Assistant Instructors</h1>
            <p>
              Meet our Assistant Instructors of Great Britain Tang Soo Do
            </p>

            <div class="row">
                {assinstructors.map((assinstructorsItem) => (
                  <div class="col-6 col-lg-2 col-md-4 col-sm-4 align-items-stretch">
                  <div class="member">
                    <div class="member-img">
                      <img
                        src={assinstructorsItem.img}
                        class="img-fluid"
                        alt=""
                      />
                    </div>
                    <div class="member-info">
                      <h4>{assinstructorsItem.name}</h4>
                      <span>{assinstructorsItem.region ? assinstructorsItem.region : "" }</span>
                      <span>{assinstructorsItem.title ? assinstructorsItem.title : <br /> }</span>
                    </div>
                  </div>
                </div>
                ))}
        
              </div>
        </div>
    </section>
</Layout>